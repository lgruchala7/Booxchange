<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Booxchange" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_main</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_main</item>
    </style>
    <style name="FullScreen" parent="Theme.Booxchange">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>